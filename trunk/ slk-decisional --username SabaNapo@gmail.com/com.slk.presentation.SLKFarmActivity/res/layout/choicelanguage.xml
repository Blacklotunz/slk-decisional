<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/choicesupply"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/White" >

        
        <TextView
        android:id="@+id/tvlangTitleUk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Choose your language"
        android:textColor="@color/text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvlangTitleSri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvlangTitleUk"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text"
        android:text="චූසේ යෝඋර් ලන්ගුඅගේ"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center" />
        
        <Button
            android:id="@+id/english"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:background="@drawable/uk"
            android:text="English"
            android:textAppearance="@style/ButtonTextMedium"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sinhala"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:background="@drawable/sri"
            android:text="Sinhala"
            android:textAppearance="@style/ButtonTextMedium"
            android:textColor="@color/Black"
            android:textStyle="bold" />

    </RelativeLayout>
